{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<form method="post" class="bg-dark p-4 text-white rounded">
					{% if error is defined and error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							You are logged in as
							{{ app.user.userIdentifier }},
							<a href="{{ path('app_logout') }}" class="text-danger">Logout</a>
						</div>
					{% endif %}

					<h1 class="h3 mb-3 font-weight-normal text-center">Connectez Vous</h1>
					<div class="form-group mb-2">
						<label for="inputEmail" class="mb-1">Email</label>
						<input type="email" value="{{ last_username|default('') }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
					</div>

					<div class="form-group mb-3">
						<label for="inputPassword" class="mb-1">Password</label>
						<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
					</div>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<button class="btn btn-lg btn-danger btn-block" type="submit">
						Se connecter
					</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
