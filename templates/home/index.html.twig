{% extends 'base.html.twig' %}

{% block body %}

	<main class="main" style="background-color: #141414; padding-top: 20px;">

		<section class="films-grid">
			<div class="row">
				{% for film in films_semaine %}
					<div class="col-md-4 mb-4">
						<div class="card bg-dark text-white h-100">
							<img src="{{ asset('uploads/films/' ~ film.affiche) }}" alt="Affiche de {{ film.titre }}" class="card-img-top">
							<div class="card-body">
								<h5 class="card-title">{{ film.titre }}</h5>
								<p class="card-text">{{ film.description }}</p>
								<a href="#" class="btn btn-danger">Regarder</a>
							</div>
						</div>
					</div>
				{% else %}
					<div class="col-12">
						<p class="text-white">Aucun film à afficher pour la semaine.</p>
					</div>
				{% endfor %}
			</div>
		</section>

		<footer class="footer mt-4">
			<div class="container">
				<div class="row">
					<div class="col-md-6">
						<p class="text-muted">&copy; AfloCine 2023</p>
					</div>
					<div class="col-md-6">
						<ul class="nav justify-content-end">
							<li class="nav-item">
								<a class="nav-link text-muted" href="#">Mentions légales</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-muted" href="#">Contact</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</footer>

	</main>

{% endblock %}
